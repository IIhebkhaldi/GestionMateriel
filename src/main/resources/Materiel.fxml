<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox fx:controller="tn.esprit.test.MaterielController" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="TOP_CENTER" styleClass="root">
    <children>
        <!-- Header -->
        <HBox styleClass="header-bar" alignment="CENTER" spacing="10" prefHeight="50">
            <Label text="Gestion de Matériel" styleClass="header-title" />
        </HBox>

        <!-- Form Panel -->
        <VBox styleClass="form-panel" spacing="10" alignment="CENTER" prefWidth="800">
            <Label text="Ajouter/Modifier Matériel" styleClass="form-title" />
            <HBox spacing="10" alignment="CENTER">
                <Label text="Nom :" />
                <TextField fx:id="txtNom" promptText="Nom du matériel" styleClass="text-field" />
                <Label text="Type :" />
                <ComboBox fx:id="comboType" promptText="Sélectionner un type" styleClass="combo-box" />
                <Label text="Quantité :" />
                <TextField fx:id="txtQuantite" promptText="Quantité" styleClass="text-field" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnAjouter" text="Ajouter" onAction="#handleAjouter" styleClass="btn-add" />
                <Button fx:id="btnModifier" text="Modifier" onAction="#handleModifier" styleClass="btn-modify" />
                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#handleSupprimer" styleClass="btn-delete" />
                <Button fx:id="btnExporter" text="Exporter CSV" onAction="#handleExporter" styleClass="btn-export" />
                <Button fx:id="btnExportPDF" text="Exporter PDF" onAction="#handleExportPDF" styleClass="btn-export" />
                <Button fx:id="btnEnvoyerSMS" text="Envoyer SMS" onAction="#handleEnvoyerSMS" styleClass="btn-export" />
            </HBox>
        </VBox>

        <!-- Search Panel -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rechercher :" />
            <TextField fx:id="txtRecherche" promptText="Rechercher par nom" styleClass="search-input" />
            <Label text="Filtrer par type :" />
            <ComboBox fx:id="comboFiltre" promptText="Filtrer par type" styleClass="combo-box" />
        </HBox>

        <!-- Cards Container -->
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <content>
                <FlowPane fx:id="materialCards" hgap="10" vgap="10" styleClass="cards-container" />
            </content>
        </ScrollPane>

        <!-- Footer -->
        <HBox styleClass="footer-bar" alignment="CENTER" spacing="10" prefHeight="30">
            <Label text="© 2025 Gestion Matériel" styleClass="footer-text" />
        </HBox>
    </children>
    <stylesheets>
        <URL value="@MaterielStyles.css" />
    </stylesheets>
</VBox>